# DRX Environment Configuration

# Database
DATABASE_URL=postgresql://drx:drx_password@localhost:5432/drx
POSTGRES_USER=drx
POSTGRES_PASSWORD=drx_password
POSTGRES_DB=drx

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenRouter API (configured with Google AI Studio keys)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Web Search (OpenRouter Native - Primary)
# Native search is free (included in token cost) for Anthropic, OpenAI, Perplexity, xAI models
SEARCH_ENGINE=native
SEARCH_MODEL=google/gemini-3-flash-preview
SEARCH_MAX_RESULTS=5

# Tavily Search API (Optional Fallback)
# Enable only if you need Tavily as a fallback search provider
TAVILY_ENABLED=false
TAVILY_API_KEY=your_tavily_api_key

# Phoenix Observability
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:4317
PHOENIX_PROJECT_NAME=drx-research

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Model Configuration
DEFAULT_MODEL=google/gemini-3-flash-preview
REASONING_MODEL=deepseek/deepseek-r1
MAX_TOKENS_PER_REQUEST=100000
DEFAULT_TEMPERATURE=0.7

# Research Settings
MAX_RESEARCH_ITERATIONS=5
MAX_SOURCES_PER_QUERY=20
TOKEN_BUDGET_PER_SESSION=500000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=1000000

# Security
SECRET_KEY=your_secret_key_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
