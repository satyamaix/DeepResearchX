{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://drx.anthropic.com/schemas/agent_manifest.json",
  "title": "AgentManifest",
  "description": "Configuration manifest for DRX research agents. Defines capabilities, limits, and operational parameters.",
  "type": "object",
  "required": ["id", "version", "agent_type", "capabilities"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z_]+_v\\d+$",
      "description": "Unique agent identifier in format: agent_name_vN (e.g., searcher_v1)",
      "examples": ["planner_v1", "searcher_v2", "critic_v1"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the agent configuration",
      "default": "1.0.0",
      "examples": ["1.0.0", "2.1.3"]
    },
    "agent_type": {
      "type": "string",
      "enum": ["planner", "searcher", "reader", "synthesizer", "critic", "reporter", "orchestrator", "reasoner", "writer"],
      "description": "The type/role of the agent in the research workflow"
    },
    "display_name": {
      "type": "string",
      "maxLength": 255,
      "description": "Human-readable display name for the agent"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the agent's purpose and behavior"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "List of capabilities this agent provides (e.g., web_search, content_extraction)"
    },
    "allowed_domains": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "hostname"
      },
      "default": [],
      "description": "Domains the agent is allowed to access. Empty array means all domains allowed."
    },
    "blocked_domains": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "hostname"
      },
      "default": [],
      "description": "Domains the agent is explicitly blocked from accessing"
    },
    "max_budget_usd": {
      "type": "number",
      "minimum": 0,
      "maximum": 1000,
      "default": 1.0,
      "description": "Maximum budget in USD for this agent per session"
    },
    "rate_limits": {
      "type": "object",
      "description": "Rate limiting configuration for the agent",
      "additionalProperties": false,
      "properties": {
        "requests_per_minute": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10000,
          "default": 60,
          "description": "Maximum requests per minute"
        },
        "tokens_per_minute": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 10000000,
          "default": 100000,
          "description": "Maximum tokens per minute"
        }
      },
      "default": {
        "requests_per_minute": 60,
        "tokens_per_minute": 100000
      }
    },
    "health_thresholds": {
      "type": "object",
      "description": "Health monitoring thresholds for the agent",
      "additionalProperties": false,
      "properties": {
        "max_error_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.1,
          "description": "Maximum acceptable error rate (0.0-1.0)"
        },
        "max_latency_ms": {
          "type": "integer",
          "minimum": 100,
          "maximum": 600000,
          "default": 30000,
          "description": "Maximum acceptable latency in milliseconds"
        },
        "min_success_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.9,
          "description": "Minimum acceptable success rate (0.0-1.0)"
        }
      },
      "default": {
        "max_error_rate": 0.1,
        "max_latency_ms": 30000,
        "min_success_rate": 0.9
      }
    },
    "circuit_breaker": {
      "type": "object",
      "description": "Circuit breaker configuration for fault tolerance",
      "additionalProperties": false,
      "properties": {
        "failure_threshold": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 5,
          "description": "Number of failures before circuit opens"
        },
        "success_threshold": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 3,
          "description": "Number of successes in half-open state before closing"
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3600,
          "default": 60,
          "description": "Seconds to wait before attempting recovery (half-open state)"
        }
      },
      "default": {
        "failure_threshold": 5,
        "success_threshold": 3,
        "timeout_seconds": 60
      }
    },
    "model_config": {
      "type": "object",
      "description": "LLM model configuration for the agent",
      "additionalProperties": true,
      "properties": {
        "model": {
          "type": "string",
          "default": "claude-sonnet-4-20250514",
          "description": "Model identifier to use"
        },
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2,
          "default": 0.7,
          "description": "Sampling temperature"
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200000,
          "default": 4096,
          "description": "Maximum tokens in response"
        },
        "top_p": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.95,
          "description": "Top-p (nucleus) sampling parameter"
        }
      },
      "default": {
        "model": "claude-sonnet-4-20250514",
        "temperature": 0.7,
        "max_tokens": 4096,
        "top_p": 0.95
      }
    },
    "allowed_tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "List of tool names this agent is permitted to use"
    },
    "tool_config": {
      "type": "object",
      "additionalProperties": true,
      "default": {},
      "description": "Tool-specific configuration overrides"
    },
    "timeout_seconds": {
      "type": "integer",
      "minimum": 1,
      "maximum": 3600,
      "default": 60,
      "description": "Default timeout for agent operations in seconds"
    },
    "max_concurrent_calls": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 5,
      "description": "Maximum concurrent API calls for this agent"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether this agent is currently active and available"
    },
    "is_default": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is the default agent for its type"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "default": {},
      "description": "Additional custom metadata for the agent"
    }
  }
}
